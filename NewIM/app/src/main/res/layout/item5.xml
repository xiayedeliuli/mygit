<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/lay"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">



    <cn.bmob.imdemo.YiYou.Utils.CircleImageView
        app:civ_border_color="#000"
        app:civ_border_width="1dp"
        android:id="@+id/XC"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:src="#ededed"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <RelativeLayout
        android:id="@+id/relayout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/XC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/zhuti2"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/cansex"
            android:layout_marginTop="3dp"
            android:background="@drawable/listinfoboy"
            android:layout_toRightOf="@id/zhuti2"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:textColor="#999999"
            android:id="@+id/index2"
            android:layout_marginTop="5dp"
            android:layout_below="@id/zhuti2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time3"
            android:textColor="#999999"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/XC"
        android:id="@+id/text"
        android:layout_marginTop="10dp"
        android:layout_below="@id/relayout"
        android:textColor="#666666"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <TextView
        android:visibility="gone"
        android:id="@+id/keti"
        android:background="#ccc"
        android:layout_marginLeft="80dp"
        android:layout_below="@id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
