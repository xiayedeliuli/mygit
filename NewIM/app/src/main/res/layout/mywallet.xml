<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/walletback"
            android:src="@drawable/left1"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:textColor="#000"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="我的钱包"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ImageView
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:background="#fff"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="70dp">

            <TextView
                android:textColor="#000"
                android:id="@+id/mywallet"
                android:layout_marginBottom="12dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:text="余额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#000"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:layout_above="@id/mywallet"
                android:textSize="20sp"
                android:text="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="70dp">

            <TextView
                android:textColor="#000"
                android:id="@+id/mywallet1"
                android:layout_marginBottom="12dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:text="收入"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/green"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:layout_above="@id/mywallet1"
                android:textSize="20sp"
                android:text="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="70dp">

            <TextView
                android:textColor="#000"
                android:id="@+id/mywallet2"
                android:layout_marginBottom="12dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:text="支出"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/orange"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:layout_above="@id/mywallet2"
                android:textSize="20sp"
                android:text="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="70dp">

            <Button
                android:onClick="tixian"
                android:textColor="#000"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:layout_below="@id/top"
                android:background="#ffcc33"
                android:textSize="12sp"
                android:text="提现"
                android:layout_width="50dp"
                android:layout_height="30dp" />


        </RelativeLayout>



    </LinearLayout>



    <LinearLayout
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/shouru1"
            android:background="@drawable/layout_click_selector"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp">

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:id="@+id/shouru"
                    android:textColor="#000"
                    android:text="收入"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textgone1"
                   android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/shouru"
                    android:background="#ffcc33"
                    android:layout_width="55dp"
                    android:layout_height="4dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/zhichu2"
            android:background="@drawable/layout_click_selector"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp">

            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:id="@+id/zhichu"
                android:textColor="#000"
                android:text="支出"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:id="@+id/textgone2"
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/zhichu"
                android:background="#ffcc33"
                android:layout_width="55dp"
                android:layout_height="4dp" />

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>