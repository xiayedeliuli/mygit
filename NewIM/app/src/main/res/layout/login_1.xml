<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/setback"
            android:src="@drawable/left1"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <!--<TextView-->
            <!--android:id="@+id/zhanghao"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:text="账号登陆"-->
            <!--android:textColor="#474747"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:textSize="16sp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
    </RelativeLayout>

    <ImageView
        android:background="#ccc"
        android:layout_width="match_parent"
        android:layout_height="1dp" />



    <TextView
        android:id="@+id/number"
        android:layout_marginLeft="30dp"
        android:textColor="#4d4d4d"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:text="请输入您的手机号码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginRight="30dp"
        android:id="@+id/login_1_layout"
        android:background="#ebebeb"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/number"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#424242"
            android:textSize="18sp"
            android:layout_below="@id/number"
            android:text="+86  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="#ccc"
            android:layout_width="1dp"
            android:layout_height="40dp" />



        <EditText
            android:numeric="integer"
            android:layout_marginLeft="10dp"
            android:focusable="true"
            android:background="@null"
            android:inputType="number"
            android:layout_gravity="center"
            android:id="@+id/login_1_et_phone"
            android:textSize="16sp"
            android:hint="  输入手机号码                         "
            android:layout_below="@id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:enabled="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/login_1_layout"
        android:textColor="#D0D0D0"
        android:background="#525252"
        android:text="下一步"
        android:onClick="login_1_next"
        android:id="@+id/login_1_next"
        android:layout_width="match_parent"
        android:layout_height="45dp" />



</LinearLayout>