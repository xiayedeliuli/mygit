<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <ImageView
        android:background="#ffcc33"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:background="#ffcc33"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/matchback"
            android:src="@drawable/left1"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:textColor="#000"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="我的匹配"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>




    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/running"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"
                android:text="进行中"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/matchgone1"
                android:layout_gravity="center"
                android:background="#ffcc33"
                android:layout_width="65dp"
                android:layout_height="3dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pass"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"
                android:text="已结束"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/matchgone2"
                android:layout_gravity="center"
                android:background="#fff"
                android:layout_width="65dp"
                android:layout_height="3dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/allmatch"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"
                android:text="全部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/matchgone3"
                android:layout_gravity="center"
                android:background="#fff"
                android:layout_width="65dp"
                android:layout_height="3dp" />

        </LinearLayout>
        </LinearLayout>


    <ListView
        android:visibility="visible"
        android:id="@+id/matchlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>

    <ListView
        android:visibility="gone"
        android:id="@+id/passlistview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>

    <ListView
        android:visibility="gone"
        android:id="@+id/alllistview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>











</LinearLayout>