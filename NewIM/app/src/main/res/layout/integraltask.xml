<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="#ffcc33"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:background="#ffcc33"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/dhsetback"
            android:src="@drawable/left1"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:textColor="#474747"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:text="赚取积分"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>





    <ImageView
        android:scaleType="centerCrop"
        android:background="#ededed"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/imgjf" />

    <RelativeLayout
        android:background="#EC807E"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/mywallet"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:text="我的积分：0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:background="#FAD099"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--兑换4-->

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:id="@+id/touimg4"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/wanchengpipei"
                android:layout_width="42dp"
                android:layout_height="42dp">

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/touimg4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text4"
                    android:textColor="#fff"
                    android:text="在首页完成一次匹配"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/text4"
                    android:textColor="#fff"
                    android:text="+1积分"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/go4"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/jiangpin_drawable"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="30dp">

                <TextView
                    android:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:text="去完成"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>


        <!--兑换2-->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:id="@+id/touimg2"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/renzheng"
                android:layout_width="42dp"
                android:layout_height="42dp">

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/touimg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text2"
                    android:textColor="#fff"
                    android:text="首次完成校园认证"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/text2"
                    android:textColor="#fff"
                    android:text="+2积分"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/go2"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/jiangpin_drawable"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="30dp">

                <TextView
                    android:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:text="去完成"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/v2"
                android:textColor="#d98817"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="已完成"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <!--兑换3-->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:id="@+id/touimg3"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/fenxiang"
                android:layout_width="42dp"
                android:layout_height="42dp">

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/touimg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text3"
                    android:textColor="#fff"
                    android:text="邀请一位好友完成认证"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/text3"
                    android:textColor="#fff"
                    android:text="+3积分"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/go3"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/jiangpin_drawable"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="30dp">

                <TextView
                    android:textColor="#fff"
                    android:layout_centerInParent="true"
                    android:text="去完成"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>

        <!--兑换1-->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:id="@+id/touimg1"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/xiazai"
                android:layout_width="42dp"
                android:layout_height="42dp">

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/touimg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text1"
                    android:textColor="#fff"
                    android:text="首次下载注册"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/text1"
                    android:textColor="#fff"
                    android:text="+1积分"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


            <TextView
                android:textColor="#d98817"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="已完成"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>



    </LinearLayout>
</LinearLayout>