<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialogsharp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/popuplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_weight="12"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="#525252"
                    android:text="发布匹配"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:id="@+id/popuexit"
                    android:src="@mipmap/chaohao2"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

            </LinearLayout>




            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#474747"
                    android:text="类型"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/choicexiangmu"
                    android:textColor="#cccccc"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="请选择匹配项目"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/choicelay"
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/choiceimg"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/icon1"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                    <TextView
                        android:id="@+id/choicename"
                        android:textColor="#4a4a4a"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:text="图书馆"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>





            </LinearLayout>

            <ImageView
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#474747"
                    android:text="时间"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/timepicker"
                    android:textColor="#ccc"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="请选择赴约时间"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/timetx"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#474747"
                    android:text="地点"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/jiheditx"
                    android:visibility="visible"
                    android:textColor="#ccc"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="请选择集合地点"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/nospinerlay"
                    android:layout_weight="1.3"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_gravity="right"
                        android:textSize="15sp"
                        android:textColor="#4a4a4a"
                        android:text=""
                        android:id="@+id/nospinertx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/nospinertxtx"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>





            </LinearLayout>

            <ImageView
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#474747"
                    android:text="性别"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#ccc"
                    android:id="@+id/sexchoice"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="请选择优先性别"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/sexlay"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#ccc"
                        android:id="@+id/sex_all"
                        android:layout_marginLeft="53dp"
                        android:textSize="19sp"
                        android:text="不限"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="#ccc"
                        android:id="@+id/sex_boy"
                        android:layout_marginLeft="30dp"
                        android:textSize="19sp"
                        android:text="男"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="#ccc"
                        android:id="@+id/sex_girl"
                        android:layout_marginLeft="30dp"
                        android:textSize="19sp"
                        android:text="女"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:enabled="false"
                android:id="@+id/fgbutton"
                android:textColor="#cccc"
                android:background="@drawable/tuiyuanbtn_selector"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="下一步"
                android:layout_width="250dp"
                android:layout_height="40dp" />


            <com.baidu.mapapi.map.TextureMapView
                android:id="@+id/mymap"
                android:clickable="true"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">

            </com.baidu.mapapi.map.TextureMapView>



        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/newlay"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textColor="#000"
                android:text="相关说明"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="top"
                android:textSize="19sp"
                android:textColor="#454545"
                android:text="匹配流程"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="top"
                android:visibility="visible"
                android:textColor="#969696"
                android:textSize="15sp"
                android:text="亦友社交提供基于大学生的线下社交匹配服务，匹配成功后,双方于约定时间在指定地点会合"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="top"
                android:textSize="19sp"
                android:textColor="#454545"
                android:text="奖惩机制"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="top"
                android:visibility="visible"
                android:textColor="#969696"
                android:textSize="15sp"
                android:text="1.未于约定时间到达指定地点者（即违约者）会被暂时关闭匹配功能，并须提供一定赔偿金"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="top"
                android:visibility="visible"
                android:textColor="#969696"
                android:textSize="15sp"
                android:text="2.被违约方将得到对方支付的赔偿金"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="top"
                android:textSize="19sp"
                android:textColor="#454545"
                android:text="备注"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="top"
                android:visibility="visible"
                android:textColor="#969696"
                android:textSize="15sp"
                android:text="1.关于取消匹配：已达成的匹配需双方都取消才能消除，单方取消无效"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="top"
                android:visibility="visible"
                android:textColor="#969696"
                android:textSize="15sp"
                android:text="2.亦友面向对象为经过验证的大学生群体（首次匹配仅验证地理位置），为切实保障您的人身安全，请在校内约定地点集合，"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/queding"
                android:textColor="#000"
                android:background="@drawable/tuiyuanbtn_selector"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="确定"
                android:layout_width="250dp"
                android:layout_height="40dp" />

        </LinearLayout>


    </RelativeLayout>







</RelativeLayout>